<%- include("_header") -%>
<h1>Customer Export</h1>
<h4>Total number of records in the database: <%= totRecs %> </h4>
<h3>Enter a file name and click "Export Customers"</h3>
<label for="filename">File Name:</label>
<input type="text" id="fname" name="fname" form="filename">
<br>
<br>

<form action="/output" method="post">
    <input type="submit" id="submit" class="btn btn-primary" value="Export Customers">
</form>
<% if(message.substring(0,5) === "Error") { %>
    <h2>Error!</h2>
    <p><%= message %></p>
<% } %>



<%- include("_footer") -%>

