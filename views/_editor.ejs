<div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusid">ID</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" name="cusid" value="<%= model.cusid %>" required minlength="1" />
      <a>(Required)</a>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusfname">First Name</label>
    <div class="col-sm-7">
      <input class="form-control" name="cusfname" value="<%= model.cusfname %>" required minlength="1" />
      <a>(Required)</a>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cuslname">Last Name</label>
    <div class="col-sm-7">
      <input class="form-control" name="cuslname" value="<%= model.cuslname %>" required minlength="1" />
      <a>(Required)</a>
    </div>
  </div>
  <br>

  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cusstate">State</label>
    <div class="col-sm-7">
      <input class="form-control" name="cusstate" value="<%= model.cusstate %>" pattern="[A-Za-z]{2}" title="Two letter state code"/>
    </div>
  </div>
<br>
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cussalesytd">Sales YTD</label>
    <div class="col-sm-7">
      <input class="form-control" name="cussalesytd" value="<%= model.cussalesytd %>" />
    </div>
  </div>
<br>
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="cussalesprev">Previous Years Sales</label>
    <div class="col-sm-7">
      <input class="form-control" name="cussalesprev" value="<%= model.cussalesprev %>" />
    </div>
  </div>
